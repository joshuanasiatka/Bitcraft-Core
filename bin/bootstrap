# echo "Installing Composer..."
# sudo apt-get install composer
#
# echo "Installing PHP Extensions..."
# sudo apt-get install php7.0-pgsql php7.0-curl php7.0-imap php7.0-mcrypt php-memcache php7.0-xmlrpc php7.0-mbstring
